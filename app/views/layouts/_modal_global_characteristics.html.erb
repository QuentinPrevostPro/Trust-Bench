<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <div class="modal-header justify-content-end pt-0 pb-0">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="modal-body text-center pt-0 pb-0">
      <h3>Approche globale</h3>
      <h4>Saisie des caract√©ristiques (1/3)</h4>
      <div class="progress-item">
        <div class="progress">
            <div class="progress-bar bg-primary" role="progressbar" style="width: 33.3333%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
      </div>
      <%= f.select(:activity, options_for_select(Activity.pluck(:label, :id), target_blank: true ))  %>
      <%= f.select(:size, options_for_select(Size.pluck(:label, :id), target_blank: true ))  %>
    </div>
    <div class="modal-footer pt-2 pb-2">    
      <button type="button" class="btn btn-primary btn-block step-2" data-dismiss="modal">Etapes suivantes</button>
    </div>
  </div>
</div>

