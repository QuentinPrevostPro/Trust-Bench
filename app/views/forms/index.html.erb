<!-- En-tête -->
<header class="header-sticky header-light" style="background-color:white;">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand scroll-smooth-fast" href="#scroll-CTA">
        <%= image_tag "trust-bench-logo.png", class: "navbar-logo navbar-logo-light" %>
        <%= image_tag "trust-bench-logo.png", class: "navbar-logo navbar-logo-dark" %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="burger"><span></span></span></button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav align-items-center mr-auto">
          <li class="nav-item">
            <a class="nav-link scroll-smooth-fast" href="#scroll-value" role="button">
              Valeur ajoutée
            </a>
          </li>
          <li class="nav-item">
            <a class="btn btn-sm btn-primary px-2 scroll-smooth-fast" href="#scroll-benchmark" role="button">
              Faire une demande de benchmark
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
<!-- En-tête -->

<!-- CTA -->
<section class="p-0 pt-3 bg-primary" id="scroll-CTA">
  <div class="container">
    <div class="row align-items-center justify-content-between py-5 py-md-10">
      <div class="col-6 text-center text-lg-left">
        <h1 class="display-3">Votre <strong>benchmark personnalisé et gratuit</strong> en moins de 48h</h1>
        <div class="input-group mb-1">
            <button class="btn btn-white" type="button">Je demande mon benchmark</button>
        </div>
      </div>
      <div class="col-6" >
          <%= image_tag "cta-illustration.svg", style:'width:100%;'%>
      </div>
    </div>
  </div>
</section>
<!-- CTA -->

<!-- Valeur ajoutée du service -->
<section class="bg-white pt-5 pb-5" id="scroll-value">
  <div>
  <h3 class="text-decorate  text-center mb-5 pr-2 pl-2">Trust & Bench apporte un éclairage précieux sur les leviers d'optimisation à activer</h3>
    <div class="container ">
      <div class="row">
        <div class="col-md-4 text-center">
          <i class="fas fa-brain fs-50 mb-1 "></i>
          <h3 class="text-uppercase font-weight-normal fs-18 mt-2">L'expertise métier d'un cabinet de conseil reconnu</h3>
          <p>Trust & Bench est un service proposé par Argon Consulting, cabinet leader des opérations</p>
        </div>
        <div class="col-md-4 text-center">
          <i class="fas fa-database fs-50 mb-1 "></i>
          <h3 class="text-uppercase font-weight-normal fs-18 mt-2">Une base de données large et actualisée</h3>
          <p>En près de 20 ans d'existence, Argon a pu constituer une base de données solide</p>
        </div>
        <div class="col-md-4 text-center">
          <i class="fas fa-chart-line fs-50 mb-1 "></i>
          <h3 class="text-uppercase font-weight-normal fs-18 mt-2">Une proposition d'accompagnement au plus juste</h3>
          <p>Le benchmark permet un diagnostic clair et rapide des principaux leviers d'optimisation</p>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Valeur ajoutée du service -->

<!-- Benchmark -->
<section class="bg-primary pt-5 pb-5" id="scroll-benchmark">
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <div class="boxed p-5">
          <div class="container">
            <div class="row justify-content-between align-items-center">
              <div class="col-md-8">
                <h2 class="display-3 mb-1">Je demande mon benchmark <b>gratuitement</b></h2>
                <h5>Veuillez tout d'abord choisir le périmètre fonctionnel de l'analyse:</h5>
                <%= form_tag forms_path, method: "post" do %>
                  <div class="input-group mt-2">
                    <select id="mySelect" onchange="selectedApproach()">
                      <option value="Default">Choisir un périmètre</option>
                      <option value="Global">Périmètre global Finance</option>
                      <option value="Finance">Fonction Finance</option>
                      <option value="HR">Fonction RH</option>
                      <option value="IT">Fonction IT</option>
                      <option value="Sales">Fonction Marketing & Ventes</option>
                    </select>
                    <button type="button" class="btn btn-primary" id="form-modal" data-toggle="modal" data-target=""></button>
                  </div>
                <% end %>
              </div>
              <div class="col-md-4">
                <%= image_tag "trust-bench-logo.png"%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Benchmark -->

<!-- MODALS -->
<!-- Global approach -->
<%= form_for :collected_datum, :url => forms_path do |f| %>
  <!-- Characteristic modal -->
  <div class="modal fade" id="modalGlobal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <%= render 'layouts/modal_global_characteristics', f: f %>
  </div>
  <!-- Contact modal -->
  <div class="modal fade" id="modalGlobalStep3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <%= render 'layouts/modal_global_contacts', f: f %>
  </div>
  <!-- Metric modal -->
  <div class="modal fade" id="modalGlobalStep2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <%= render 'layouts/modal_global_metrics', f: f %>
  </div>
<% end %>




