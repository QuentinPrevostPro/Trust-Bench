<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <div class="modal-header justify-content-end pt-0 pb-0">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="modal-body text-center pt-0 pb-0">
      <h3>Approche globale</h3>
      <h4>Informations de contact (3/3)</h4>
      <div class="progress-item">
        <div class="progress">
            <div class="progress-bar bg-primary" role="progressbar" style="width: 100%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"><span>100%</span></div>
        </div>
      </div>
      <div class="row" style="overflow: scroll; height: 300px;">
        <div class="col-6">
          <div class = "mt-4">
            <%= f.label "Prénom" %>
            <%= f.text_field :first_name, class:"form-control" %>
          </div>
          <div>
            <%= f.label "Nom" %>
            <%= f.text_field :last_name, class:"form-control" %>
          </div>
          <div>
            <%= f.label "Courriel" %>
            <%= f.text_field :email, class:"form-control" %>
          </div>
        </div>
        <div class="col-6">
          <div class = "mt-4">
            <%= f.label "Entreprise" %>
            <%= f.text_field :company, class:"form-control" %>
          </div>
          <div>
            <%= f.label "Poste occupé" %>
            <%= f.text_field :position, class:"form-control" %>
          </div>
      </div>
        </div>
      </div>
    <div class="modal-footer">
      <%= f.submit "Demande du benchmark", class: "btn btn-primary step-4" %>
    </div>
  </div>
</div>

